ControlPersist yes
ControlMaster auto
ServerAliveInterval 60
HashKnownHosts yes
AddKeysToAgent yes

Host * !github.com-work
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519-github
  ControlPath ~/.ssh/control/control-%h-%p-%r-github

Host github.com-work
  HostName github.com
  User git
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519
  ControlPath ~/.ssh/control/control-%h-%p-%r
