ControlPath ~/.ssh/control/control-%h-%p-%r
ControlPersist yes
ControlMaster auto
ServerAliveInterval 60
HashKnownHosts yes
AddKeysToAgent yes


Host github.com exec "[ $(git config user.email | awk -F"@" '{print $2}') = joshua.hu ]"
    Hostname github.com
    IdentityFile ~/.ssh/id_ed25519-github
    IdentitiesOnly yes
    AddKeysToAgent yes
