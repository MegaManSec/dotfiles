ControlPersist yes
ControlMaster auto
ServerAliveInterval 60
HashKnownHosts yes
AddKeysToAgent yes
IdentitiesOnly yes

Host github.com
  User git
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519-personal-github
  ControlPath ~/.ssh/control/control-%h-%p-%r-personal-github

Host github.com-work
  HostName github.com
  User git
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519-work-github
  ControlPath ~/.ssh/control/control-%h-%p-%r-work-github

Host * !github.com
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_ed25519-personal-random
  ControlPath ~/.ssh/control/control-%h-%p-%r-personal-random
